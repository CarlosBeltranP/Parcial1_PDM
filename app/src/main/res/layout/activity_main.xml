<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.MainActivity"
        android:gravity="center"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        >

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:text="Basketball Counter"
    android:textSize="28dp"
    android:textColor="#000"
              android:drawableTop="@drawable/players"
    android:layout_marginBottom="50dp"/>
    <EditText
            android:id="@+id/playerA_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Player 1"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/playera"
            android:layout_margin="8dp"


    />

    <EditText
            android:id="@+id/playerB_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Player 2"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/playerb"
            android:layout_margin="8dp"/>

    <Button
            android:id="@+id/start_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Start"

            android:background="#000"
            android:textColor="#ffff"/>
    <Button
            android:id="@+id/list_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="game history"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:textColor="#ffff"/>


</LinearLayout>